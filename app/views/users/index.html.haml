.panel.panel-default
  .panel-heading
    %strong Manage users
    .pull-right
      = link_to new_user_path, class: 'btn btn-primary btn-small' do
        %span
          %i.glyphicon.glyphicon-plus
          Add New User

  %table.table
    %thead
      %tr
        %th Name
        %th Email
        %th Role
        %th{colspan: 3} Actions
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= user.try(:role)
          %td= link_to 'View', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }
