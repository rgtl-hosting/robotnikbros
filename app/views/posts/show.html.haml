%p#notice= notice
%p
  %strong Body:
  = @post.body
%p
  %strong User:
  = @post.user.name
%p
  %strong Comments:
  = @post.comments.each do |comment|
    = comment.comment
    = comment.user.name
%p
  %strong Add Comment
  = form_for ([@post, @post.comments.build]) do |f|
    = f.label :comment
    = f.text_area :comment
    = f.hidden_field :user_id, value: current_user.id
    = f.submit
= link_to 'Edit', edit_post_path(@post)
= link_to 'Back', posts_path
