.form-group
  = form_for(@post) do |f|
    - if @post.errors.any?
      #error_explanation
        %h2
          = pluralize(@post.errors.count, "error")
          prohibited this post from being saved:
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg
    .form-group
      = f.label :title
      = f.text_field :title, :default => :title
    .form-group
      = f.bootsy_area :body, :size => "30x20"
      = f.hidden_field :user_id, value: current_user.id
    .actions
      = f.submit nil, :class => 'btn btn-primary warning'
      or
      = link_to t('.cancel'), posts_path
